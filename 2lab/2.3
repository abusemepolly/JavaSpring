class ArrayUtils {
    /**
     * Ищет максимальную сумму непрерывного подмассива (алгоритм Кадане).
     * @param arr входной массив
     * @return максимальная сумма; 0 для пустого или null
     */
    public static int maxSubarraySum(int[] arr) {
        if (arr == null || arr.length == 0) {
            return 0;
        }
        int maxEndingHere = arr[0];
        int maxSoFar = arr[0];
        for (int i = 1; i < arr.length; i++) {
            // начать новый подмассив или продолжить текущий
            maxEndingHere = Math.max(arr[i], maxEndingHere + arr[i]);
            maxSoFar = Math.max(maxSoFar, maxEndingHere);
        }
        return maxSoFar;
    }
}

public class Main {
    public static void main(String[] args) {
        int[] arr = {-2, 1, -3, 4, -1, 2, 1, -5, 4};
        int maxSum = ArrayUtils.maxSubarraySum(arr);
        System.out.println("Максимальная сумма подмассива: " + maxSum);
    }
}

import java.util.Arrays;

class ArrayUtils {
    /**
     * Поворачивает двумерный массив на 90° против часовой стрелки.
     * @param matrix исходная матрица
     * @return новая повернутая матрица
     */
    public static int[][] rotateCounterClockwise(int[][] matrix) {
        if (matrix == null || matrix.length == 0) {
            return new int[0][0];
        }
        int rows = matrix.length;
        int cols = matrix[0].length;
        int[][] result = new int[cols][rows];
        // Для каждой ячейки исходной матрицы вычисляем её новое положение
        for (int i = 0; i < rows; i++) {
            for (int j = 0; j < cols; j++) {
                result[cols - 1 - j][i] = matrix[i][j];
            }
        }
        return result;
    }
}

public class Main {
    public static void main(String[] args) {
        int[][] matrix = {
                {1, 2, 3},
                {4, 5, 6}
        };

        // Поворот матрицы на 90° против часовой стрелки
        int[][] rotated = ArrayUtils.rotateCounterClockwise(matrix);

        System.out.println("Исходная матрица:");
        for (int[] row : matrix) {
            System.out.println(Arrays.toString(row));
        }

        System.out.println("Повернутая матрица:");
        for (int[] row : rotated) {
            System.out.println(Arrays.toString(row));
        }
    }
}

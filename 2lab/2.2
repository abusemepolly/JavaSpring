import java.util.Arrays;

class ArrayUtils {
    /**
     * Объединяет два отсортированных массива в один.
     * @param a первый отсортированный массив
     * @param b второй отсортированный массив
     * @return новый отсортированный массив длины a.length + b.length
     */
    public static int[] mergeSorted(int[] a, int[] b) {
        int n = a.length, m = b.length;
        int[] result = new int[n + m];
        int i = 0, j = 0, k = 0;
        // Сливаем, выбирая меньший элемент
        while (i < n && j < m) {
            if (a[i] <= b[j]) {
                result[k++] = a[i++];
            } else {
                result[k++] = b[j++];
            }
        }
        // Дописываем оставшиеся элементы из a
        while (i < n) {
            result[k++] = a[i++];
        }
        // Дописываем оставшиеся элементы из b
        while (j < m) {
            result[k++] = b[j++];
        }
        return result;
    }
}


public class Main {
    public static void main(String[] args) {
        int[] a = {1, 3, 5, 7};
        int[] b = {2, 4, 6, 8, 10};
        
        int[] merged = ArrayUtils.mergeSorted(a, b);
        System.out.println("Объединённый массив: " + Arrays.toString(merged));
    }
}
